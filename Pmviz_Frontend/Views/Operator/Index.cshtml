@{
    ViewData["Title"] = "Home Page";
}

    <div class="demo-section k-content">
        <div>
            <h1>Operator</h1>

            @(Html.Kendo().Button()
                                    .Name("logButton")
                                    .HtmlAttributes(new { type = "button", @class = "k-primary" })
                                    .Content("All Logs")
                                    .Events(e => e.Click("onClick_Logs")))
            @(Html.Kendo().Button()
                                        .Name("LogoutButton")
                                        .HtmlAttributes(new { type = "button", @class = "k-danger" })
                                        .Content("Logout")
                                        .Events(e => e.Click("onClick_Logout")))

        </div>
        <style>
            #cy {
                position: absolute;
                margin-top: 2%;
                margin-bottom: 2%;
                width: 50%;
                height: 100%;
                border: 2px solid #186860;
                border-radius: 10px;
            }
        </style>

        <div id="cy"></div>
        <script src="@Url.Content("~/vendor/cytoscape/dist/cytoscape.min.js")"></script>
    </div>
    <script>
        var cy = cytoscape({
            container: document.getElementById('cy'),
            elements: [
                // nodes
                { data: { id: 'a' } },
                { data: { id: 'b' } },
                { data: { id: 'c' } },
                { data: { id: 'd' } },
                { data: { id: 'e' } },
                { data: { id: 'f' } },
                // edges
                {
                    data: {
                        id: 'ab',
                        source: 'a',
                        target: 'b'
                    }
                },
                {
                    data: {
                        id: 'cd',
                        source: 'c',
                        target: 'd'
                    }
                },
                {
                    data: {
                        id: 'ef',
                        source: 'e',
                        target: 'f'
                    }
                },
                {
                    data: {
                        id: 'ac',
                        source: 'a',
                        target: 'c'
                    }
                },
                {
                    data: {
                        id: 'be',
                        source: 'b',
                        target: 'e'
                    }
                }
            ],
            style: [
                {
                    selector: 'node',
                    style: {
                        shape: 'hexagon',
                        'background-color': 'red',
                        label: 'data(id)'
                    }
                }]
        });

        for (var i = 0; i < 10; i++) {
            cy.add({
                data: { id: 'node' + i }
            }
            );
            var source = 'node' + i;
            cy.add({
                data: {
                    id: 'edge' + i,
                    source: source,
                    target: (i % 2 == 0 ? 'a' : 'b')
                }
            });
        }

        cy.layout({
            name: 'circle'
        }).run();
        </script>
        
        <script>
            function onClick_Logs() {
                window.location = '@Url.Action("Index", "Log")';
            }
            function onClick_Logout() {
            window.location = '@Url.Action("Logout", "Login")';
            }
        </script>
        


                
