@{ 
    IEnumerable<String> roles = ViewData["roles"] as IEnumerable<String>;
}
@{
    ViewData["Title"] = "Registo";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
@addTagHelper *, Kendo.Mvc




<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="col-md-8 col-lg-6 col-xl-5">

            <div class="card bg-pattern">
                <div class="card-body p-4">
                    <div class="text-center w-75 m-auto">
                        <div class="auth-logo">
                            <h4>PMVIZ</h4>
                        </div>
                        <p class="text-muted mb-4 mt-3">Cria uma conta.</p>
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }
                        <form method="post">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input class="form-control" type="text" name="username" placeholder="Insere um username" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Nome</label>
                                <input class="form-control" type="text" name="name" placeholder="Insere um nome" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input class="form-control" type="email" name="email" required placeholder="Insere um email">
                            </div>
                            <div class="form-group">
                                <label for="role">Role</label>
                                <br />
                                <select name="role" class="form-control btn-sm btn-light dropdown-toggle" required>
                                    @foreach (String r in roles)
                                    {
                                        <option value="@r"> @r</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <div class="input-group input-group-merge">
                                    <input type="password" name="password" class="form-control" placeholder="Insere uma password">
                                    <div class="input-group-append" data-password="false">
                                        <div class="input-group-text">
                                            <span class="password-eye"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="confirmpassword">Confirmação Password</label>
                                <div class="input-group input-group-merge">
                                    <input type="password" name="confirmpassword" class="form-control" placeholder="Confirma password">
                                    <div class="input-group-append" data-password="false">
                                        <div class="input-group-text">
                                            <span class="password-eye"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-0 text-center">
                                <button class="btn btn-success btn-block" type="submit"> Registar </button>
                                <p>Já tem uma conta?  <a href="/login"><b>Inicia Sessão</b></a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- end page -->
