@model IEnumerable<Pmviz_Frontend.Models.User>
@using Kendo.Mvc.UI
@{ Layout = "_Layout"; ViewBag.Title = "All Users";}
@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(l => l.Username).Title("Username").Width(130);
        columns.Bound(l => l.Id_Role).Title("Id_Role").Width(130);
        columns.Bound(l => l.Name).Title("Name").Width(130);
        columns.Bound(l => l.Email).Title("Email").Width(130);
    })
    .Pageable()
    .Sortable()
    .Filterable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(false)
     )
)