    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Processes</h4>
                    <div class="table-responsive">
                        <table id="scroll-horizontal-datatable" class="table table-dark dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Pmviz_Frontend.Models.Log log in allProcesses)
                                {
                                    <tr>
                                        <td class="id">@log.Id</td>
                                        <td>@log.Name</td>
                                        <td>@log.Description</td>
                                        <td>
                                            <button class="btn btn-sm btn-rounded btn-primary stats">Statistics</button>
