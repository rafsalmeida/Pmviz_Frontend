        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">All Processes</h4>
                        <div class="table-responsive">
                            <table id="scroll-horizontal-datatable" class="table table-dark dt-responsive nowrap w-100">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Number of cases</th>
                                        <th>Number of activities</th>
                                        <th>Start date</th>
                                        <th>End date</th>
                                        @if (!details.Contains("resourcesStats") && !details.Contains("activityFrequency"))
                                        {
                                            <th>Statistics</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Pmviz_Frontend.Models.Log log in Model)
                                    {
                                        <tr>
                                            <td class="id">@log.Id</td>
                                            <td>@log.Name</td>
                                            <td>@log.NumberOfCases</td>
                                            <td>@log.NumberOfActivities</td>
                                            @if (log.StartDate == null)
                                            {
                                                <td>-</td>
                                            }
                                            else
                                            {
                                                <td>@log.StartDate</td>
                                            }
                                            @if (log.EndDate == null)
                                            {
                                                <td>-</td>
                                            }
                                            else
                                            {
                                                <td>@log.EndDate</td>
                                            }
                                        <td>
                                            @if (!details.Contains("activityFrequency"))
                                            {
                                                <button class="btn btn-sm btn-rounded btn-primary activity"  >Activities</button>
                                                <br />
                                            }
                                            @if (!details.Contains("resourcesStats"))
                                            {
                                                <button class="btn btn-sm btn-rounded btn-danger resource">Resources</button>

                                            }
                                        </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
